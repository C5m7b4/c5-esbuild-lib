{
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    ".(css|less|scss)$": "identity-obj-proxy",
    ".+\\.svg$": "<rootDir>/transformers/svg.js"
  },
  "setupFilesAfterEnv": ["<rootDir>/support/setupTests.js"],
  "clearMocks": true,
  "coverageDirectory": "./coverage",
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "transform": {
    "^.+\\.(t|j)sx?$": "@swc/jest"
  },
  "testPathIgnorePatterns": ["transformers"],
  "coveragePathIgnorePatterns": ["src/*/I[A-z]*.ts"]
}
